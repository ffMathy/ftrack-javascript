{
  "name": "ftrack-javascript-api",
  "version": "0.9.0",
  "description": "JavaScript API for ftrack.",
  "scripts": {
    "lint": "eslint . && prettier -c .",
    "test": "mocha test && yarn lint",
    "build": "vite build"
  },
  "main": "./dist/ftrack-javascript-api.umd.js",
  "module": "./dist/ftrack-javascript-api.es.js",
  "types": "main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ftrack-javascript-api.es.js",
      "require": "./dist/ftrack-javascript-api.umd.js"
    }
  },
  "files": [
    "dist",
    "main.d.ts"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-config-react-app": "^7.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "^18.0.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^12.3.3",
    "mocha": "^9.1.3",
    "msw": "^0.35.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5",
    "vite": "^2.6.13"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/ftrack/ftrack-javascript-api.git"
  },
  "keywords": [
    "ftrack",
    "api",
    "library",
    "umd"
  ],
  "author": "ftrack",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://bitbucket.org/ftrack/ftrack-javascript-api/issues"
  },
  "homepage": "http://ftrack.com",
  "dependencies": {
    "lodash": "^4.12.0",
    "loglevel": "^1.4.0",
    "moment": "^2.13.0",
    "uuid": "^3.4.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,json,jsx,scss,yml}": "prettier --write"
  }
}
